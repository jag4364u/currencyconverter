<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke
                        android:width="@dimen/size_1_dp"
                        android:color="@color/grey" />
                    <corners android:radius="@dimen/size_2_dp" />
                    <solid android:color="@android:color/transparent"/>
                    <padding android:bottom="@dimen/size_4_dp"
                        android:top="@dimen/size_4_dp"
                        android:left="@dimen/size_4_dp"
                        android:right="@dimen/size_4_dp"/>
                </shape>
            </item>
            <item android:gravity="center_vertical|right" android:drawable="@drawable/ic_drop_down"/>
        </layer-list>
    </item>
</layer-list>